<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_song_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_music_note_24"

        />
    <TextView
        android:id="@+id/item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_song_image"
        app:layout_constraintTop_toTopOf="@id/item_song_image"
        app:layout_constraintBottom_toTopOf="@id/item_song_author"
        android:layout_marginLeft="16dp"
        android:text="Song"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/item_song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="Author"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/item_song_image"

        app:layout_constraintTop_toBottomOf="@id/item_song_name" />


    />

</androidx.constraintlayout.widget.ConstraintLayout>